{
  "name": "synced-server",
  "author": {
    "email": "dong@dongyeop.com",
    "name": "Dong Yeop Lee",
    "url": "https://dongyeop.com"
  },
  "description": "Web app for watching synced videos",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "dev": "PORT=3001 nodemon bin/www",
    "format": "prettier --write '**/*.js'",
    "build": "cd client/ && yarn install && yarn run build",
    "heroku-postbuild":
      "cd client/ && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "cacheDirectories": ["node_modules", "client/node_modules"],
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "jade": "~1.11.0",
    "morgan": "~1.9.0",
    "randomstring": "^1.1.5",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.1.3",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.4"
  },
  "engines": {
    "node": ">=8.11.2 <10.3.0"
  },
  "lint-staged": {
    "**/*.js": ["prettier --write", "git add"]
  },
  "nodemonConfig": {
    "ignore": ["client/*"],
    "verbose": true
  }
}
